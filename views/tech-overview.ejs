<body>
    <!-- START: Body Content -->
    <header>
      <div class="ezy__nav4">
        <nav class="navbar navbar-expand-lg  py-3">
          <div class="container">
            <a class="navbar-brand" href="#">
              LOGO
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#ezy_nav4-navbar-text"
              aria-controls="ezy_nav4-navbar-text" aria-expanded="false" aria-label="Toggle navigation">
              <span>
                <span></span>
              </span>
            </button>
            <div class="collapse navbar-collapse" id="ezy_nav4-navbar-text">
              <ul class="navbar-nav mx-auto mb-2 mb-lg-0 mt-4 mt-lg-0">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                <li class="nav-item"><a class="nav-link" href="#">My Tech</a></li>
                <!-- <li class="nav-item"><a class="nav-link" href="#">How It Works</a></li> -->
              </ul>
              <ul class="navbar-nav flex-row mb-2 mb-lg-0">
                <li class="nav-item">
                  <button class="btn btn-outline-light px-3">Log Out</button>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </header>
  <div class="body-container">
  <nav class="sidebar-container">
    <ul class="sidebar-tech-links">
      <a href="/"><li><span><i class="fa-solid fa-house"></i></span><span>Home</span></li></a>
      <a href="/profile"><li><span><i class="fa-solid fa-user"></i></span><span>Profile</span></li></a>
      <hr>
      <span class="sidebar-header">MY TECH</span>
      <% for (let i = 0; i < fields.length; i++) {%>
        <a href="/profile/<%= fields[i].techName %>"><li><span><i class="<%= fields[i].faClass %>"></i></span><span><%= fields[i].techName %></span></li></a>
      <% } %>
    </ul>
  </nav>
  <main class="main">
    <section class="ezy__cta13 dark-gray" id="ezy__cta13">
      <div class="profile-overview-container">
        <div class="container">
          <div class="row ezy__cta13-separator content-slider">
            <!-- Start: Section Heading -->
            <div class="text-center mb-4">
              <h3 class="ezy__cta13-heading mb-3"><%= tech %> Overview</h3>
              <p class="ezy__cta13-sub-heading mb-3">Create a list of high-level topics to review in Anki, then save your session history.</p>
            </div>
            <!-- End: Section Heading -->
            <!-- Register Form Goes Here  -->
            <form id="addTopicForm" action="/addTopic?tech=<%= query %>" method="POST" class="ezy__cta13-single-form">
              <div class="container-fluid">
                <div class="row profile-form">
                  <div class="col-12 col-lg-4">
                    <input name="topic" id="ezy__cta13-register-name" class="form-control" type="text" placeholder="Create new topic" autocomplete="off"
                      required />
                  </div>
                  <div class="col-12 col-lg-4">
                    <button class="btn ezy__cta13-btn mt-3 mt-lg-0" id="addTopicBtn">Add To List</button>
                  </div>
                </div>
                <!-- End: .row -->
              </div>
              <!-- End: .container-fluid -->
            </form>
            <!-- End: #register-form -->
          </div>
          <!-- End: .row -->
        </div>
        <!-- End:.container -->
        <div class="progress-container">
          <figure>
            <svg width="200" height="200" viewBox="-25 -25 250 250" version="1.1" xmlns="http://www.w3.org/2000/svg" style="transform:rotate(-90deg)">
              <circle r="90" cx="100" cy="100" fill="transparent" stroke="#e0e0e0" stroke-width="22" stroke-dasharray="565.48px" stroke-dashoffset="0"></circle>
              <circle r="90" cx="100" cy="100" stroke="#76e5b1" stroke-width="16px" stroke-linecap="round" stroke-dashoffset="107px" fill="transparent" stroke-dasharray="565.48px"></circle>
              <text x="46px" y="119px" fill="#6bdba7" font-size="59px" font-weight="bold" style="transform:rotate(90deg) translate(0px, -196px)">81%</text>
            </svg>
          </figure>
        </div>
      </div>
    </section>

    <section class="ezy__faq12 gray">
        <div class="container">
          <div class="row justify-content-center text-center">
            <div class="col-lg-8 mb-5">
              <h2 class="ezy__faq12-heading mb-4"><%= tech %> | Main Topics</h2>
              <p class="ezy__faq12-sub-heading mb-0">
                Assumenda non repellendus distinctio nihil dicta sapiente, quibusdam maiores, illum at, aliquid blanditiis
                eligendi qui.Assumenda non repellendus distinctio nihil dicta sapiente, quibusdam maiores
              </p>
            </div>
          </div>
          <div class="row justify-content-center">
            <div class="col-md-8">
              <div class="ezy__faq12-list p-4">
                <% if (!techObj[0].topic) { %>
                  <span>You have not added any topics!</span>
                <% } else { %>  
                <% for (let i = 0; i < techObj[0].topic.length; i++) { %>
                <div class="ezy__faq12-item"></div>
                  <a class="btn px-0 py-3 w-100 text-start d-flex justify-content-between align-items-center ezy__faq12-btn-collapse"
                    data-bs-toggle="collapse" href="#ezy-faq12-collapse-<%= i + 1 %>" role="button" aria-expanded="true"
                    aria-controls="ezy-faq12-collapse-1">
                    <span><%= techObj[0].topic[i] %></span>
                    <span class="fas fa-chevron-down"></span>
                  </a>
                  <div class="collapse show border-start border-3 border-warning mb-3" id="ezy-faq12-collapse-<%= i + 1 %>">
                    <div class="ezy__faq12-content px-4">
                      <p class="opacity-50 mb-0">
                        You have not logged any sessions.
                      </p>
                    </div>
                  </div>
                <% } %>
              <% } %>
                <!-- <button class="btn btn-outline-primary my-4">View All FAQ's</button> -->
              </div> 
            </div>
          </div>
        </div>  
      </section>
  </main>
</div>
    <!-- END: Body Content -->

